<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:clipChildren="false"
        android:clipToPadding="false"
        tools:context="com.fuagra.dmb.MainActivity">

        <TextView
            android:id="@+id/datesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Dates" />


        <TextView
            android:id="@+id/remainingDaysLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            tools:text="Days" />

        <ProgressBar
            android:id="@+id/yearProgressLabel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/yearPercentageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            tools:text="%" />


        <TextView
            android:id="@+id/remainingHoursLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            tools:text="Hours" />

        <ProgressBar
            android:id="@+id/dayProgressLabel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dayPercentageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            tools:text="%" />

        <TextView
            android:id="@+id/remainingMinutesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            tools:text="Minutes" />

        <ProgressBar
            android:id="@+id/hourProgressLabel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/hourPercentageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            tools:text="%" />


        <TextView
            android:id="@+id/remainingSecondsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            tools:text="Seconds" />

        <ProgressBar
            android:id="@+id/minuteProgressLabel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/minutePercentageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            tools:text="%" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clipToPadding="false"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/soldier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_image" />
            <ImageView
                android:id="@+id/soldierSpeaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_image_anim"
                android:alpha="0"/>


        </FrameLayout>

    </LinearLayout>
</ScrollView>